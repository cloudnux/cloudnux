{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "globalEnv": [
        "NODE_ENV"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ],
            "env": [
                "NODE_ENV"
            ]
        },
        "dev": {
            "dependsOn": [
                "^build"
            ],
            "interruptible": true,
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [],
            "cache": false
        },
        "type-check": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "yalc:push": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "yalc:publish": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        },
        "publish-packages": {
            "dependsOn": [
                "build",
                "lint",
                "type-check",
                "test"
            ],
            "cache": false
        }
    }
}