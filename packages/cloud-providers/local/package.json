{
  "name": "@cloudnux/local-cloud-provider",
  "version": "0.1.0",
  "description": "CloudNux local development cloud provider implementation",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./queue-plugin": {
      "types": "./dist/queue-plugin/index.d.ts",
      "import": "./dist/queue-plugin/index.mjs",
      "require": "./dist/queue-plugin/index.js"
    },
    "./schedule-plugin": {
      "types": "./dist/schedule-plugin/index.d.ts",
      "import": "./dist/schedule-plugin/index.mjs",
      "require": "./dist/schedule-plugin/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudnux/cloudnux.git",
    "directory": "packages/cloud-providers/local"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "yalc:publish": "yalc publish --private",
    "yalc:push": "yalc push --private",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cloudnux/core-cloud-provider": "0.0.2",
    "axios": "1.9.0",
    "chalk": "^5.4.1",
    "cron-parser": "^4.9.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "fastify-raw-body": "^5.0.0",
    "log-symbols": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "22.10.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}