{
  "name": "@cloudnux/local-cloud-provider",
  "version": "0.5.0",
  "description": "CloudNux local development cloud provider implementation",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./queue-plugin": {
      "types": "./dist/queue-plugin/index.d.ts",
      "import": "./dist/queue-plugin/index.js"
    },
    "./schedule-plugin": {
      "types": "./dist/schedule-plugin/index.d.ts",
      "import": "./dist/schedule-plugin/index.js"
    },
    "./dev-console-plugin": {
      "types": "./dist/dev-console-plugin/index.d.ts",
      "import": "./dist/dev-console-plugin/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudnux/cloudnux.git",
    "directory": "packages/cloud-providers/local"
  },
  "scripts": {
    "build": "tsup",
    "yalc:publish": "yalc publish --private",
    "yalc:push": "yalc push --private",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cloudnux/core-cloud-provider": "0.5.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.0.0",
    "axios": "1.9.0",
    "chalk": "^5.4.1",
    "cron-parser": "^4.9.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "fastify-raw-body": "^5.0.0",
    "log-symbols": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "vitest": "^4.0.14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}