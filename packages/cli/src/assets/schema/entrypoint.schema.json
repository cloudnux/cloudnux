{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Entrypoint",
    "description": "Component entrypoint configuration",
    "type": "object",
    "properties": {
        "entries": {
            "$ref": "#/definitions/Record"
        }
    },
    "required": [
        "entries"
    ],
    "definitions": {
        "MethodType": {
            "enum": [
                "GET",
                "PUT",
                "POST",
                "PATCH",
                "DELETE"
            ]
        },
        "HttpTrigger": {
            "type": "object",
            "properties": {
                "options": {
                    "type": "object",
                    "properties": {
                        "route": {
                            "type": "string"
                        },
                        "method": {
                            "$ref": "#/definitions/MethodType"
                        }
                    },
                    "required": [
                        "route",
                        "method"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "options"
            ]
        },
        "FilterCondition": {
            "oneOf": [
                {
                    "type": [
                        "string",
                        "number",
                        "boolean",
                        "null"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "$eq": {},
                        "$ne": {},
                        "$gt": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "$gte": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "$lt": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "$lte": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "$in": {
                            "type": "array"
                        },
                        "$nin": {
                            "type": "array"
                        },
                        "$all": {
                            "type": "array"
                        },
                        "$size": {
                            "type": "number"
                        },
                        "$regex": {
                            "type": "string"
                        },
                        "$startsWith": {
                            "type": "string"
                        },
                        "$endsWith": {
                            "type": "string"
                        },
                        "$contains": {
                            "type": "string"
                        },
                        "$exists": {
                            "type": "boolean"
                        },
                        "$type": {
                            "type": "string",
                            "enum": [
                                "string",
                                "number",
                                "boolean",
                                "object",
                                "array",
                                "null",
                                "undefined"
                            ]
                        }
                    },
                    "additionalProperties": false
                }
            ]
        },
        "ScheduleTrigger": {
            "type": "object",
            "properties": {
                "options": {
                    "type": "object",
                    "properties": {
                        "pattern": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "pattern",
                        "name"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "options"
            ]
        },
        "EventTrigger": {
            "type": "object",
            "properties": {
                "options": {
                    "type": "object",
                    "properties": {
                        "source": {
                            "type": "string"
                        },
                        "sourceType": {
                            "type": "string"
                        },
                        "filter": {
                            "type": "object",
                            "additionalProperties": {
                                "oneOf": [
                                    {
                                        "type": [
                                            "string",
                                            "number",
                                            "boolean",
                                            "null"
                                        ]
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "$eq": {},
                                            "$ne": {},
                                            "$gt": {
                                                "type": [
                                                    "number",
                                                    "string"
                                                ]
                                            },
                                            "$gte": {
                                                "type": [
                                                    "number",
                                                    "string"
                                                ]
                                            },
                                            "$lt": {
                                                "type": [
                                                    "number",
                                                    "string"
                                                ]
                                            },
                                            "$lte": {
                                                "type": [
                                                    "number",
                                                    "string"
                                                ]
                                            },
                                            "$in": {
                                                "type": "array"
                                            },
                                            "$nin": {
                                                "type": "array"
                                            },
                                            "$all": {
                                                "type": "array"
                                            },
                                            "$size": {
                                                "type": "number"
                                            },
                                            "$regex": {
                                                "type": "string"
                                            },
                                            "$startsWith": {
                                                "type": "string"
                                            },
                                            "$endsWith": {
                                                "type": "string"
                                            },
                                            "$contains": {
                                                "type": "string"
                                            },
                                            "$exists": {
                                                "type": "boolean"
                                            },
                                            "$type": {
                                                "type": "string",
                                                "enum": [
                                                    "string",
                                                    "number",
                                                    "boolean",
                                                    "object",
                                                    "array",
                                                    "null",
                                                    "undefined"
                                                ]
                                            }
                                        },
                                        "additionalProperties": false
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "$and": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/definitions/FilterCondition"
                                                }
                                            }
                                        },
                                        "required": [
                                            "$and"
                                        ],
                                        "additionalProperties": false
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "$or": {
                                                "type": "array",
                                                "items": {
                                                    "$ref": "#/definitions/FilterCondition"
                                                }
                                            }
                                        },
                                        "required": [
                                            "$or"
                                        ],
                                        "additionalProperties": false
                                    }
                                ]
                            }
                        }
                    },
                    "required": [
                        "source",
                        "sourceType"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "options"
            ]
        },
        "FileTrigger": {
            "type": "object",
            "properties": {
                "options": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "action": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "path"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "options"
            ]
        },
        "Trigger": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "http",
                        "schedule",
                        "event",
                        "file"
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "http"
                            }
                        }
                    },
                    "then": {
                        "$ref": "#/definitions/HttpTrigger"
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "schedule"
                            }
                        }
                    },
                    "then": {
                        "$ref": "#/definitions/ScheduleTrigger"
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "event"
                            }
                        }
                    },
                    "then": {
                        "$ref": "#/definitions/EventTrigger"
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "const": "file"
                            }
                        }
                    },
                    "then": {
                        "$ref": "#/definitions/FileTrigger"
                    }
                }
            ],
            "required": [
                "type"
            ]
        },
        "Entry": {
            "type": "object",
            "properties": {
                "trigger": {
                    "$ref": "#/definitions/Trigger"
                },
                "handler": {
                    "type": "string"
                }
            },
            "required": [
                "trigger",
                "handler"
            ],
            "additionalProperties": false
        },
        "Record": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/Entry"
            }
        }
    }
}